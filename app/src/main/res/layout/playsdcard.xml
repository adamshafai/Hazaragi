<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">



    <ImageButton

        android:id="@+id/stop"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/stop"
        android:gravity="center_horizontal"
        android:text="stop"
        tools:layout_conversion_absoluteX="154dp"
        tools:layout_conversion_absoluteY="420dp"
        tools:layout_conversion_absoluteWidth="75dp"
        tools:layout_conversion_absoluteHeight="75dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/play"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/play"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/play"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/forward" />

    <ImageButton

        android:id="@+id/play"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/forward"
        android:gravity="center_horizontal"
        android:text="play"
        tools:layout_conversion_absoluteX="154dp"
        tools:layout_conversion_absoluteY="420dp"
        tools:layout_conversion_absoluteWidth="75dp"
        tools:layout_conversion_absoluteHeight="75dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toLeftOf="@+id/forward"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/forward" />


    <ImageButton

        android:id="@+id/forward"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/forward_end"
        android:text="play"
        tools:layout_conversion_absoluteX="229dp"
        tools:layout_conversion_absoluteY="420dp"
        tools:layout_conversion_absoluteWidth="75dp"
        tools:layout_conversion_absoluteHeight="75dp"
        android:layout_marginRight="76dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />


    <ImageButton

        android:id="@+id/backward"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/rewind_back"
        android:gravity="center_horizontal"
        android:text="play"
        tools:layout_conversion_absoluteX="79dp"
        tools:layout_conversion_absoluteY="420dp"
        tools:layout_conversion_absoluteWidth="75dp"
        tools:layout_conversion_absoluteHeight="75dp"
        app:layout_constraintRight_toLeftOf="@+id/stop"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/play" />


</android.support.constraint.ConstraintLayout>

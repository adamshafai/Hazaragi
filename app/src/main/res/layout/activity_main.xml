<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">



    <ImageButton

        android:id="@+id/spela"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/forward"
        android:gravity="center_horizontal"
        android:text="play"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton

        android:id="@+id/spela_fram"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/spela"
        android:layout_toRightOf="@+id/spela"
        android:background="@drawable/forward_end"
        android:gravity="center_horizontal"
        android:text="play" />

    <ImageButton

        android:id="@+id/spela_bak"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/spela"
        android:layout_toStartOf="@+id/spela"
        android:background="@drawable/rewind_back"
        android:gravity="center_horizontal"
        android:text="play" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/spela">
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/dambora"
            android:id="@+id/bakgrund"


            />
    </FrameLayout>


</RelativeLayout>
